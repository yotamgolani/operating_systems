// .devcontainer/devcontainer.json
{
  "name": "AMD64 Debian Bullseye (Student User)",

  "build": {
    "dockerfile": "Dockerfile",
    "args": {
      "PLATFORM": "linux/amd64"
    }
  },

  // Specifies the user that VS Code and related processes will run as
  "remoteUser": "student",
  "customizations": {
    "vscode": {"settings": {"terminal.integrated.defaultProfile.linux": "bash"}}
  },

  // bind only the folder you opened in VS Code (not the whole repo root)
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
  "workspaceFolder": "/workspace"
}
